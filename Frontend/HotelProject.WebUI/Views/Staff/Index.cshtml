@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<!-- ctrl shit w view in browser-->
<h1>Index</h1>
<table class="table table-bordered">     
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Unvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.StaffID</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-danger">Sil</a></td>
            <td><a href = "#" class="btn btn-success">Güncelle</a></td>
            <td><a href = "#" class="btn btn-dark">Detayla</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn btn-info">Yeni Personel Girişi</a>

    